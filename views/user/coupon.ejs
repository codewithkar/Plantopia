<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Coupons - Plantopia</title>
    <link rel="stylesheet" href="/tailwindcss/output.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body class="bg-[##FFF6F4]">
    <%- include("../partials/nav") %>
    <div class="h-10"></div>

    <!-- Main Content -->
    <main class="container mx-auto flex flex-col md:flex-row py-10 px-6 gap-6">
        <!-- Profile Sidebar -->
        <%- include("../partials/profileSidebar") %>

        <!-- Coupons Section -->
        <section class="w-full md:w-3/4">
            <div class="bg-white rounded-lg shadow-md p-6">
                <h2 class="text-xl font-bold mb-6 text-gray-800">Available Coupons</h2>

               
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div class="border rounded-lg overflow-hidden bg-gradient-to-r from-gray-50 to-white">
                                <!-- Coupon Header -->
                                <div class="p-4 border-b bg-gray-50">
                                    <div class="flex justify-between items-start">
                                        <div>
                                            <h3 class="text-lg font-bold text-gray-800">qwefghj</h3>
                                            <p class="text-sm text-gray-600">pkjnbv</p>
                                        </div>
                                        <div class="text-right">
                                            <span class="text-2xl font-bold text-green-600">
                                                56%
                                            </span>
                                            <p class="text-sm text-gray-500">OFF</p>
                                        </div>
                                    </div>
                                </div>

                                <!-- Coupon Details -->
                                <div class="p-4 space-y-3">
                                    <div class="flex items-center text-sm text-gray-600">
                                        <i class="fas fa-tag w-5"></i>
                                        <span>Min. Purchase: ₹90</span>
                                    </div>
                                    
                               
                                        <div class="flex items-center text-sm text-gray-600">
                                            <i class="fas fa-circle-info w-5"></i>
                                            <span>Max Discount: ₹77</span>
                                        </div>
                                  

                                    <div class="flex items-center text-sm text-gray-600">
                                        <i class="fas fa-clock w-5"></i>
                                        <span>Valid till: dhhg</span>
                                    </div>

                                    
                                        <div class="flex items-center text-sm text-gray-600">
                                            <i class="fas fa-users w-5"></i>
                                            <span>
                                                90 coupons left
                                            </span>
                                        </div>

                                    <div class="flex items-center text-sm text-gray-600">
                                        <i class="fas fa-repeat w-5"></i>
                                        <span>Usage Limit: 4 per user</span>
                                    </div>
                                </div>

                                <!-- Copy Button -->
                                <div class="p-4 bg-gray-50 border-t">
                                    <button 
                                        
                                        class="w-full bg-black text-white py-2 px-4 rounded-lg hover:bg-gray-800 transition-colors flex items-center justify-center gap-2"
                                    >
                                        <i class="fas fa-copy"></i>
                                        Copy Code
                                    </button>
                                </div>
                            </div>
                        
                    </div>
                
                    <div class="text-center py-8">
                        <p class="text-gray-500">No coupons available at the moment</p>
                    </div>
                
            </div>
        </section>
    </main>

    <%- include("../partials/footer") %>

   
</body>
</html> 