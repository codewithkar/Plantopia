  <div class="md:hidden">
    <button id="menu-toggle" class="text-2xl text-slate-800 focus:outline-none">
      <i class="fa-solid fa-bars"></i>
    </button>
  </div>

  <!-- Left Side (Nav Links) -->
  <div
    id="menu"
    class="hidden md:flex md:space-x-6 text-slate-800 font-medium md:items-center"
  >
